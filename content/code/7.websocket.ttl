@prefix idd: <https://jitsedesmet.be/interface-data-description#> .
@prefix ex: <https://example.org#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<get-owner> a idd:read-interface ;
            idd:interaction idd:websocket-turtle ;
            idd:http-resource <https://example.org/transfer-events> ;
            idd:mapping """
CONSTRUCT {
    [] a ex:owner-change ;
       ex:new-owner ?new-owner ;
} WHERE {
    GRAPH <change-owners> {
        [] a ex:triple-patch ;
           idd:insert <<( ?new-owner ?p ?o )>>,
    }
}
"""^^idd:sparql-1-2 .