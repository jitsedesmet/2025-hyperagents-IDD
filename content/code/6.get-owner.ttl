@prefix idd: <https://jitsedesmet.be/interface-data-description#> .
@prefix ex: <https://example.org#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<get-owner> a idd:read-interface ;
             idd:interaction idd:http-get-turtle ;
             idd:http-resource "https://example.org/owners/{id}"^^ex:uri-template ;
             idd:mapping """
CONSTRUCT {
    ?id a ex:owner ;
        ?p ?o ;
    ?o ?p1 ?o1 ;
} WHERE {
    <database> {
        ?id a ex:owner ;
            ?p ?o ;
        OPTIONAL { ?o ?p1 ?o1 . }
    }
}
"""^^idd:sparql-1-1 .